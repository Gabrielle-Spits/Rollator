<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="100dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="20px"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtbsn"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bsn:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvbsn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtOudernaam"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oudernaam:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvoudernaam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtvwafdeling"
            android:layout_width="283dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Afdeling:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvafdeling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtvwZorgcentrum"
            android:layout_width="283dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Zorgcentrum:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvZorgcentrum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>

